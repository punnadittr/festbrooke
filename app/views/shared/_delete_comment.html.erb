<%= form_for( comment, 
              method: :delete,
              url: post_comment_path(post.id, comment.id)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <%= button_tag  class: "btn btn-sm delete-comment-btn",
                  data: { confirm: 'Are you sure you want to delete this comment?' },
                  alt: 'Delete Comment' do %>
    <i class="far fa-trash-alt"></i>
  <% end %>
<% end %>