<%= form_for(post.comments.build, url: post_comments_path(post.id)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field comment-field">
    <%= f.text_area :content, placeholder: "Write a comment here..." %>
    <%= f.hidden_field :post_id, value: post.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <%= f.submit "Comment", class: "btn btn-primary btn-sm comment-btn" %>
<% end %>