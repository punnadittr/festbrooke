<%= form_for(post.comments.build, url: post_comments_path(post.id), remote: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field comment-field">
    <%= f.text_area :content, placeholder: "Write a comment here...", class: "form-control" %>
    <%= f.hidden_field :post_id, value: post.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="comment-button-wrapper">
    <%= f.submit "Comment", class: "btn btn-primary btn-sm comment-btn" %>
  </div>
<% end %>