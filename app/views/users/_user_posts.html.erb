<% unless @posts.blank? %>
  <% @posts.each do |post| %>
    <% unless post.id.nil? %>
    <div class="post-container">
      <div class="author-info">
        <p><%= link_to post.user.name, user_path(@user) %></p>
        <%= time_ago_in_words(post.created_at) + " ago" %>
      </div>
      <div class="post-content">
        <%= post.content %>
        <br>
      </div>
      <div class="like-button-section">
        <%= button_to 'Like', 
            post_likes_path(post.id), 
            method: :post %>
      </div>
      <div class="comment-box">

      </div>
      <hr>
    </div>
    <% end %>
  <% end %>
<% end %>